<h1>Great Hand for Life Time 汉化进度</h1>
<ul style="list-style: none; padding:0;margin:0;">

<% @a.each do |r|%>

<li style="padding: 5px 10px;
<% if r.data['status'] == 'Finished!' %>
background: #b7f665;
<% elsif !r.data['status'] %>
background: #cccccc;
<% elsif r.data['status'] == 'EN-?' || r.data['status'] == 'CN-?'%>
background: #f25757;
<% elsif r.data['status'] == 'EN-OK' %>
background: #65C4F7;
<% end %>
">
<a style="display:inline-block;" href="<%= r.data['url']%>"><span style="font-family: sans-serif; margin-right: 10px;">Great Hand-<%= r.data['number'] %></span></a><span style="cursor: pointer;margin-left: 3em;display:inline-block;width: 7em;" class="status"><%=  if r.data['status']; r.data['status']; else ' ' end %></span>
	<form style="display:inline;" action="/update/<%= r.key%>" method="post">
		<select name="name[status]">
			<option>EN-?</option>
			<option>EN-OK</option>
			<option>CN-?</option>
			<option>Finished!</option>
		</select>
		<input type="submit" />	
	</form>
</li> 
<% end %>
</ul>
<script>
$(function(){
		$('form').hide();
		$('.status').click(function(){
				$(this).next('form').toggle()
			})
		})
</script>

